<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="sk.fmfi.listng.domain.user.User" table="LIST_USER">

        <cache usage="read-write"/>

        <id name="id"
            column="USER_ID"
            type="long">
            <generator class="identity"/>
        </id>

        <property
                name="name"
                column="NAME"
        />

        <property
                name="email"
                column="EMAIL"
        />

        <property
                name="password"
                column="PASSWORD"
        />

        <property
                name="role"
                column="ROLE">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">sk.fmfi.listng.domain.enums.Role</param>
                <param name="useNamed">true</param>
            </type>
        </property>

        <set
                name="permissions"
                table="USER_COURSE_PERMISSION"
                cascade="all-delete-orphan"
                fetch="join">
            <cache usage="read-write"/>
            <key>
                <column name="USER_ID" not-null="true" />
            </key>
            <one-to-many class="sk.fmfi.listng.domain.user.Permission"/>
        </set>

    </class>

</hibernate-mapping>
