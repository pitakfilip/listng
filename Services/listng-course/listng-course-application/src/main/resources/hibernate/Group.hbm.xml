<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="sk.fmfi.listng.domain.administration.Group" table="COURSE_GROUP">

        <cache usage="read-write"/>

        <id name="id"
            column="GROUP_ID"
            type="long">
            <generator class="identity"/>
        </id>

        <component
                name="course"
                class="sk.fmfi.listng.domain.course.Course">

            <property
                    name="id"
                    column="COURSE_ID"
                    type="long"
            />
        </component>
        
        <property
                name="name"
                column="NAME"
        />
        
    </class>

</hibernate-mapping>
