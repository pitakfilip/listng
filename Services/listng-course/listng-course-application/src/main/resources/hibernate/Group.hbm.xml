<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="sk.fmfi.listng.course.domain.Group" table="COURSE_GROUP">

        <cache usage="read-write"/>

        <id name="id"
            column="GROUP_ID"
            type="long">
            <generator class="increment"/>
        </id>
        
        <property name="courseId" column="COURSE_ID" type="java.lang.Long"/>
        
        <component
                name="name"
                class="sk.fmfi.listng.infrastructure.common.dto.MultiLangText">
            <property name="SK" column="NAME_SK" type="java.lang.String"/>
            <property name="EN" column="NAME_EN" type="java.lang.String"/>
        </component>

        <set
                name="classes"
                table="CLASS"
                fetch="join"
                lazy="false"
        >
            <key>
                <column name="GROUP_ID" not-null="true" />
            </key>
            <one-to-many class="sk.fmfi.listng.course.domain.Class" />
        </set>
        
    </class>

</hibernate-mapping>
