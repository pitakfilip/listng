<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="sk.fmfi.listng.domain.administration.Class" table="CLASS">

        <cache usage="read-write"/>

        <id name="id"
            column="CLASS_ID"
            type="long">
            <generator class="increment"/>
        </id>

        <many-to-one name="room" fetch="join" lazy="false">
            <column name="room_id"/>
        </many-to-one>
        
        <property
                name="groupId"
                column="GROUP_ID"
                type="long"
        />
        
        <property
                name="day"
                column="DAY"
        />
        
        <property 
                name="time" 
                column="TIME"
        />

        <property
                name="duration"
                column="DURATION"
        />
        
    </class>

</hibernate-mapping>
