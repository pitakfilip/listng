<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="sk.fmfi.listng.course.domain.Period" table="PERIOD">

        <cache usage="read-write"/>

        <id name="id"
            column="PERIOD_ID"
            type="long">
            <generator class="increment"/>
        </id>

        <component
                name="name"
                class="sk.fmfi.listng.infrastructure.common.dto.MultiLangText">
            <property name="SK" column="NAME_SK" type="java.lang.String"/>
            <property name="EN" column="NAME_EN" type="java.lang.String"/>
        </component>

        <property
                name="start"
                column="PERIOD_START"
        />
        
        <property
                name="end"
                column="PERIOD_END"
        />
        
        <property name="active" column="IS_ACTIVE" type="boolean"/>
    </class>

</hibernate-mapping>
