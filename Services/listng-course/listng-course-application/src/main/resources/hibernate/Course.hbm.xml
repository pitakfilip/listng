<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="sk.fmfi.listng.domain.course.Course" table="COURSE">

        <cache usage="read-write"/>

        <id name="id"
            column="COURSE_ID"
            type="long">
            <generator class="identity"/>
        </id>

        <property
                name="name"
                column="NAME"
        />

        <component
                name="period"
                class="sk.fmfi.listng.domain.course.Period">

            <property
                    name="id"
                    column="PERIOD_ID"
                    type="long"
            />
        </component>

    </class>

</hibernate-mapping>
